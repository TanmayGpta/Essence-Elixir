<%- include('partials/header', {pageTitle:'attar'}) %>

<style>
   /* Styling for the form container */
.reta {
    width: 50%;
    margin: 8% auto 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #f9f9f9;
}

/* Styling for the heading */
.reta h1 {
    text-align: center;
    font-family: Arial, sans-serif;
    margin-bottom: 20px;
    color: #333;
}

/* Styling for form elements */
.reta form {
    display: flex;
    flex-direction: column;
}

/* Label styling */
.reta form label {
    font-size: 16px;
    margin-bottom: 5px;
    font-family: Arial, sans-serif;
    color: #444;
}

/* Input and file field styling */
.reta form input {
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 14px;
    width: 100%;
    box-sizing: border-box;
}

/* Button styling */
.reta form button {
    padding: 10px;
    font-size: 16px;
    color: #fff;
    background-color: #C2B9AD;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.reta form button:hover {
    background-color: #6B5B4C;
}
.back-home {
    text-align: center;
    margin: 20px auto 50px 0;

}

/* Styling for the button */
.back-home button {
    padding: 10px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #C2B9AD;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.back-home button:hover {
    background-color: #6B5B4C;
    transform: scale(1.05);
}
</style>

<div class="reta">
    <h1>Add a New Perfume</h1>
    <!-- The form for adding a perfume -->
    <form action="/add-perfume" method="POST" enctype="multipart/form-data">
        <label for="name">Perfume Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="discountedPrice">Discounted Price:</label>
        <input type="number" id="discountedPrice" name="discountedPrice" required>

        <label for="actualPrice">Actual Price:</label>
        <input type="number" id="actualPrice" name="actualPrice" required>

        <label for="image">Upload Image:</label>
        <input type="file" id="image" name="image" accept="image/*" required>

        <button type="submit">Add Perfume</button>
    </form>
</div>
    

<div class="back-home">
    <button onclick="location.href='/'">Back to Home</button>
</div>

    <%- include('partials/footer', {pageTitle:'attar'}) %>